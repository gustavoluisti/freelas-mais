<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="overview">
                <div class="single-order-package-card">
                    <div class="margin-both">
                        <h2 class="text-center">Resumo</h2>
                        <hr />
                        <div class="inner">
                            <img class="img-circle" src="{{ gig.picture }}" />
                            <br />
                            <p class="text-center">{{ gig.title }}</p>
                        </div>
                        <hr />
                        <div class="input-group promocode">
                            <input type="text" class="form-control" placeholder="Digite seu promocode" id="code">
                            <span class="input-group-btn">
                                <button class="btn btn-success btn-block" id="promocodeButton">Aplicar</button>
                            </span>
                            <p class="text-center" id="promocodeResponse"></p>
                        </div>

                        <hr />
                        <div class="space-between">
                            <h4><span>Subtotal:</span><span class="dollar fee">{{ gig.price }}</span></h4>
                        </div>

                        <hr />
                        <div class="space-between">
                            <h4><span>Taxa:</span><span class="dollar fee">R$ 3.15</span></h4>
                        </div>

                        <hr />

                        <div class="space-between">
                            <h3><span>Total:</span><span class="dollar fee">{{totalPrice}}</span></h3>
                        </div>
                        <hr />
                        <a href="/payment" class="btn btn-success btn-lg proceed-btn">Continuar pagamento</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>