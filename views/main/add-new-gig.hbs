<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <div class="overview">
                <h2 class="text-center">Cadastre o seu serviço</h2>
                <br />
                <div class="new-gig-card">
                    <form method="post">
                        <div class="form-group">
                            <label>Nome do Serviço</label>
                            <input type="text" class="form-control" placeholder="Meu serviço será" name="gig_title">
                        </div>

                        <div class="form-group">
                            <label>Preço do Serviço</label>
                            <input type="text" class="form-control" placeholder="R$ 3" name="gig_price">
                        </div>

                        <div class="form-group">
                            <label>Categoria do Serviço</label>
                            <select class="form-control" name="gig_category">
                                <option>Desenvolvedor</option>
                                <option>Website</option>
                                <option>Design</option>
                                <option>Cloud</option>
                                <option>Marketing Digital</option>
                            </select>
                        </div>

                        <div class="form-group input-group-lg">
                            <label>Descrição do Serviço</label>
                            <input type="text" class="form-control" placeholder="Descrição dos serviços prestados" name="gig_about">
                        </div>
                        
                        <button type="submit" class="btn btn-success btn-lg">Cadastrar</button> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>